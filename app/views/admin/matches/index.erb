<h4 class="page-title">Partidos</h4>

<div class="match-container">
  <table class="stripped tb900">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Torneo</th>
        <th>Local</th>
        <th>Visitante</th>
        <th>Fecha/Hora</th>
        <th colspan="3"></th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.title, edit_admin_match_path(match.id) %></td>
        <td><%= match.tournament.name %></td>
        <td><%= match.local_team.name %></td>
        <td><%= match.visitor_team.name %></td>
        <td><%= match.datetime.strftime('%d/%m/%Y - %H:%M') %></td>
        <td><%= link_to 'Ver +', admin_match_path(match.id) %></td>
        <td><%= remove_button_for admin_match_path(match.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= add_floating_button_for new_admin_match_path %>